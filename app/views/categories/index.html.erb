
<h1 class="text-center mt-4">Article Categories</h1>
 <div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<div class="container text-center">
  <% @categories.each do |category| %>
  <div class="row justify-content-md-center ">
    <div class="col-4 mt-4">
      <div class="container ">
        <div class="card text-center shadow mb-5 bg-body rounded">
          <div class="card-body ">
            <h5 class="card-title "><%=link_to category.name, category_path(category), class: "text-success" %></h5>
            <p class="card-text"><%= pluralize(category.articles.count, 'article')%></p>
          </div>
          <div class="card-footer bg-secondary text-white-50 ">
            <small>Created <%= time_ago_in_words(category.created_at) %> ago -- Updated <%=time_ago_in_words(category.updated_at) %> ago</small>
          </div>
        </div>
      </div>   
    </div>
  </div>
  <% end %>
</div>

<div class="flickr_pagination pb-4 mb-5">
  <%= will_paginate @categories, :container => false %>
</div>
