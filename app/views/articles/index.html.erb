  <div class="container text-center">
    <% @articles.each do |article| %>
    <div class="row justify-content-md-center ">
      <div class="col-8 mt-4">
        <div class="container ">
          <div class="card text-center shadow mb-5 bg-body rounded">
            <div class="card-header bg-secondary text-white">
              <em>by Authors Name</em>
            </div>
            <div class="card-body ">
              <h5 class="card-title "><%=link_to article.title, article_path(article), class: "text-success" %></h5>
              <p class="card-text"><%=truncate(article.description, length: 100 )%></p>
              <%= link_to 'Show', article_path(article),  class: "btn btn-outline-success" %>
              <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-info" %>
              <%= link_to 'Delete', article_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
            <div class="card-footer bg-secondary text-white-50 ">
              <small>Created <%= time_ago_in_words(article.created_at) %> ago -- Updated <%=time_ago_in_words(article.updated_at) %> ago</small>
            </div>
          </div>
        </div>   
      </div>
    </div>
  <% end %>

  </div>

  <p>
    <%= link_to 'Return to Home Page', root_path %> |
    <%= link_to 'Visit the About Page', about_path %> 
  </p>
