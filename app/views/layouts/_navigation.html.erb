<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
    <%= link_to "wooden Web Log", root_path, class: "navbar-brand", id: "logo" %>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
         <%= link_to "Loggers", users_path, class: "nav-link text-white"%>
        </li>
        
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle text-white"
            href="#"
            role="button"
            data-toggle="dropdown"
            aria-expanded="false"
          >
            Articles
          </a>
          <ul class="dropdown-menu">
            <% if logged_in? %>
              <li><%= link_to "Create New", new_article_path, class: "dropdown-item" %></li>
            <%end%>
            <li><%= link_to "View All", articles_path, class: "dropdown-item"%></li>
            <li><hr class="dropdown-divider" /></li>
            <li><%= link_to "Home", root_path, class: "dropdown-item" %>
            <li><%= link_to "About", about_path, class: "dropdown-item" %>
          </ul>
        </li>

        <% if logged_in? %>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle text-white"
            href="#"
            role="button"
            data-toggle="dropdown"
            aria-expanded="false"
          >
          <div class="d-inline-flex">
            <%= current_user.username %>&nbsp;<%= avatar_for current_user, size: '25x25' %>
          </div>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", user_path(current_user), class: "dropdown-item" %></li>
            <li><%= link_to "Edit Profile", edit_user_path(current_user), class: "dropdown-item" %></li>
          </ul>
        </li>
          
          <li class="nav-item">
            <%= link_to "Log Out", logout_path, class: "nav-link text-white", method: :delete %>
